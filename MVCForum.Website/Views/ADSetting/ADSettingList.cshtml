@using MVCForum.Website.Application
@model MVCForum.Website.ViewModels.ADSetting_List_ViewModel
@{
    Layout = "~/Views/ADSetting/ADSettingListLayout.cshtml";
    ViewBag.Title = "广告窗管理";
}
<div class="panel">
    <div class="panel-heading">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="panel-content">
        <p><label class="label label-danger">Important</label> You must remove all users from a role before you can delete it</p>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>编辑</th>
                    <th>图片名称</th>
                    <th>链接</th>
                    <th>删除</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ad in Model.ADSettings)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("EditAD", new { ad.Id })" class="btn-mvc">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>@ad.ImageName</td>
                        <td>@ad.Link</td>
                        <td>
                            <a href="@Url.Action("DeleteAD", new { ad.Id })" class="btn-mvc">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
